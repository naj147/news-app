<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- button checked -->

    <item
        android:state_checked="true">
        <shape
            android:innerRadiusRatio="1"
            android:shape="rectangle">
            <solid android:color="@color/indigo_dark"/>
            <stroke
                android:width="@dimen/spacing_1dp"
                android:color="@color/pink"/>
            <corners
                android:radius="@dimen/default_padding"/>
        </shape>
    </item>

    <!-- button unchecked -->
    <item
        android:state_checked="false">
        <shape
            android:innerRadiusRatio="1"
            android:shape="rectangle">
            <solid android:color="@color/indigo_dark"/>
            <stroke
                android:width="@dimen/spacing_1dp"
                android:color="@color/indigo_dark"/>
            <corners
                android:radius="@dimen/default_padding"/>
        </shape>
    </item>
</selector>

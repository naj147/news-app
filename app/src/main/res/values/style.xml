<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  Appthemes. -->

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--  Typography. -->

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TitleThumbnail" parent="Title">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="fontFamily">@font/helvetica_neue_regular</item>
    </style>

    <style name="TitleChannel" parent="Title">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/text_l</item>
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="TitleCategory" parent="Title">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>
    <style name="TitleCategoryIn" parent="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_xs</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>

    <style name="BodyS" parent="Body">
        <item name="android:textSize">@dimen/text_xs</item>
    </style>

    <style name="BodyBold" parent="Body">
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="TitleArticle" parent="BodyBold">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <!--  BottomNavigationView. -->
    <style name="BottomNavigationText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="fontFamily">@font/helvetica_neue_regular</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layout_height">@dimen/bottom_nav_height</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationText</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationText</item>
        <item name="android:background">@color/indigo_dark</item>
        <item name="itemTextColor">@drawable/bottom_nav_txt_color</item>
        <item name="itemBackground">@drawable/bottom_navigation_background</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">labeled</item>
    </style>

</resources>

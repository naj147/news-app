<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TitleThumbnail" parent="Title">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="fontFamily">@font/helvetica_neue_regular</item>
    </style>

    <style name="TitleChannel" parent="Title">
        <item name="android:textSize">@dimen/text_l</item>
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="TitleCategory" parent="Title">
        <item name="android:textSize">@dimen/text_s</item>
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="Body" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="BodyBold" parent="Body">
        <item name="fontFamily">@font/helvetica_neue_bold</item>
    </style>

    <style name="Description" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/helvetica_neue_regular</item>
        <item name="android:textSize">@dimen/text_s</item>
    </style>

</resources>

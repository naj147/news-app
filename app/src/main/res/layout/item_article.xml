<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/articleTitle"
        style="@style/TitleArticle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/articlePublisher"
        style="@style/BodyS"
        android:layout_width="@dimen/size_l"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:drawablePadding="@dimen/spacing_2dp"
        android:ellipsize="end"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:drawableStartCompat="@drawable/icon_list_source"
        app:layout_constraintBottom_toTopOf="@id/separator"
        app:layout_constraintLeft_toLeftOf="@+id/articleTitle"
        app:layout_constraintTop_toBottomOf="@id/articleTitle"
        tools:ignore="RtlSymmetry" />


    <TextView
        android:id="@+id/articleTime"
        style="@style/BodyS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/xLarge_margin"
        android:drawablePadding="@dimen/spacing_2dp"
        android:ellipsize="end"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:drawableStartCompat="@drawable/icon_list_time"
        app:layout_constraintBottom_toTopOf="@id/separator"
        app:layout_constraintLeft_toRightOf="@id/articlePublisher"
        app:layout_constraintTop_toBottomOf="@id/articleTitle" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_1dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
